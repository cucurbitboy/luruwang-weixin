/* pages/goTest/goTest.wxss */

.taskTest-bg {
  height: 100%;
  width: 100%;
}

.taskTest-bg image {
  width: 100%;
  height: 100%;
  font-size: 0;
  display: block;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 0;
}

.taskTest-content {
  width: 100%;
  position: absolute;
  z-index: 1;
  height: 100%;
}

.content-top {
  height: 90rpx;
  width: 100%;
  background: rgba(0, 0, 0, 0.3);
  text-align: center;
}

.content-top text {
  line-height: 90rpx;
}

.content-top text:nth-child(1), .content-top text:nth-child(3) {
  color: #fff;
  margin-right: 10rpx
}

.content-top text:nth-child(2) {
  color: #00e4ff;
  margin-right: 20rpx
}
.content-top text:nth-child(4) {
  color: #00e4ff;
}

.content-box {
  display: block;
  border-radius: 20rpx;
  background: #fff;
  width: 92%;
  margin-left: 4%;
  position: relative;
  margin-top: 30rpx;
  min-height: 100%;
}

.timer {
  position: absolute;
  top: 120rpx;
  left: 50%;
  margin-left: -63rpx;
  z-index: 2;
  width: 126rpx;
  height: 126rpx;
  border-radius: 50%;
  background: linear-gradient(to bottom right, #3d80ed, #2c37cf);
  box-shadow: 0rpx 10rpx 20rpx #ccc;
}

.timer text {
  display: block;
  background: #fff;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  line-height: 100rpx;
  text-align: center;
}

.img-content {
  width: 90%;
  margin-left: 5%;
  padding-top: 35rpx;
  padding-bottom: 35rpx;
}

.img-box {
  /* min-height: 128rpx;
   */
  height: 300rpx;
  background: #eee;
  width: 100%;
  border: solid 1rpx #ccc;
  border-radius: 5rpx;
  overflow: hidden;
}

.input-box text {
  display: block;
  color: green;
  margin-top: 20rpx;
}

.input-box input {
  display: block;
  border: solid #a1a1a1 1rpx;
  width: 100%;
  min-height: 90rpx;
  margin-top: 20rpx;
  font-size: 30rpx;
  border-radius: 5rpx;
}

.submit-btn {
  width: 100%;
  background: #3f64ce;
  border-radius: 50rpx;
  color: #fff;
  margin-top: 70rpx;
}

.cheose-value {
  border: 1px solid #ddd;
  height: 550rpx;
  overflow-y: auto;
  width: 100%;
  margin-top: 30rpx;
  box-sizing: content-box;
}

.flexbox {
  display: -webkit-box; /* Chrome 4+, Safari 3.1, iOS Safari 3.2+ */
  display: -moz-box; /* Firefox 17- */
  display: -webkit-flex; /* Chrome 21+, Safari 6.1+, iOS Safari 7+, Opera 15/16 */
  display: -moz-flex; /* Firefox 18+ */
  display: -ms-flexbox; /* IE 10 */
  display: flex; /* Chrome 29+, Firefox 22+, IE 11+, Opera 12.1/17/18, Android 4.4+ */
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: left;
  width: 100%;
}

.didarr {
  display: -webkit-box; /* Chrome 4+, Safari 3.1, iOS Safari 3.2+ */
  display: -moz-box; /* Firefox 17- */
  display: -webkit-flex; /* Chrome 21+, Safari 6.1+, iOS Safari 7+, Opera 15/16 */
  display: -moz-flex; /* Firefox 18+ */
  display: -ms-flexbox; /* IE 10 */
  display: flex; /* Chrome 29+, Firefox 22+, IE 11+, Opera 12.1/17/18, Android 4.4+ */
  flex-direction: column;
  justify-content: center;
  box-sizing: content-box;
  height: auto;
  background: #eee;
  text-align: center;
  margin: 15rpx;
  padding: 15rpx;
  overflow: auto;
  min-height: 120rpx;
  width: 40%;
}

.active {
  background: #3f64ce;
  color: #fff;
}

.red {
  color: #f00;
}

/*隐藏滚动条*/

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.arrow-left {
  overflow: hidden;
  position: absolute;
  left: 10%;
  top: 2rpx;
  width: 80rpx;
  height: 80rpx;
  z-index: 99;
  background: #fff;
  border-radius: 50%;
  transform: rotate(180deg);
  -webkit-transform: rotate(180deg);
  -moz-transform: rotate(180deg);
  -o-transform: rotate(180deg);
  -ms-transform: rotate(180deg);
}

.arrow-right {
  overflow: hidden;
  position: absolute;
  right: 10%;
  top: 2rpx;
  width: 80rpx;
  height: 80rpx;
  z-index: 99;
  background: #fff;
  border-radius: 50%;
}

.nexttest-right {
  position: absolute;
  right: 5%;
  top: 15rpx;
  font-size: 35rpx;
  font-weight: bold;
  padding: 10rpx 20rpx;
  z-index: 100;
  background: #fff;
  color: #000;
  border-radius: 10%;
}

.arrow-right image, .arrow-left image {
  width: 100%;
  height: 100%;
}

.showRealAnswer {
  margin-top: 30rpx;
  font-weight: bold;
  font-size: 35rpx;
}

.showRealAnswer view {
  margin-top: 10px;
}

.showRealAnswer .daan {
  color: red;
  display: block;
  margin-top: 20rpx;
}

.input-title {
  padding-top: 30rpx;
  display: block;
  font-size: 35rpx;
  font-weight: blod;
}

.userwrite {
  border: 1px solid #3d80ed;
  padding: 20rpx;
  width: 100%;
}

.buttontab {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
}

.buttontab button {
  margin-right: 20rpx;
}

.lurukuang {
  display: -webkit-box;
  display: -webkit-box; /* Chrome 4+, Safari 3.1, iOS Safari 3.2+ */
  display: -moz-box; /* Firefox 17- */
  display: -webkit-flex; /* Chrome 21+, Safari 6.1+, iOS Safari 7+, Opera 15/16 */
  display: -moz-flex; /* Firefox 18+ */
  display: -ms-flexbox; /* IE 10 */
  display: flex; /* Chrome 29+, Firefox 22+, IE 11+, Opera 12.1/17/18, Android 4.4+ */
  align-content: space-between;
