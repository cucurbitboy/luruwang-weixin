/* pages/InvitationCode/InvitationCode.wxss */

.please-bg{
  position: absolute;
  z-index: 0;
  width:92%;
  height:95%;
  margin-top:4%;
}
.please-bg image{
  width:100%;
  height:100%;
}
.please-content{
  position:absolute;
  z-index: 1;
  width:80%;
  
}
.please-title-img image{
  width:524rpx;
  height:124rpx;
}
.please-title-img{
  width:100%;
  margin-top:50rpx;
}
.please-title{
  width:100%;
  text-align: center;
  margin-top:20rpx;
  color:#fff;
}
.left-right-content{
  margin-top:50rpx;
  display: flex;
}
.left-content,.right-content{
  flex:1;
  height: 56rpx;
  line-height: 56rpx;

}
.left-content{
  border-right:solid 1rpx #fff;
}

.left-content image,.right-content image{
  width:64rpx;
  height:56rpx;
}
.left-box,.right-box{
  overflow: hidden;
}
.left-box image,.left-box text,.right-box image,.right-box text{
  display: block;
  float:left;
  color:#fff;
}
.left-box text,.right-box text{
  margin-left:20rpx;
}
.invitationCode-box{
  margin-top:106rpx;
  background: #fff;
  width:100%;
  height:294rpx;
  border-radius: 20rpx;
  position:relative;
}
/*用户信息*/
.userinfo {
  position: absolute;
  z-index: 1;
  width:100%;
  top:-110rpx;

}

.userinfo-box {
  margin-top: 54rpx;
  height: 131rpx;

}
.userinfo-nickname{
  color:#848585;
  text-align: center;
  width:100%;
  display: block;
  margin-top:20rpx;
}

.userinfo-avatar-box {
  /*垂直水平居中*/
  display: flex;
  justify-content: center;
  align-items: center;
  width: 131rpx;
  height: 131rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.7);
  box-shadow: 0rpx 10rpx 30rpx #ccc;

}

.userinfo-avatar {
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
  font-size: 0;
  overflow: hidden;
}

.codeNum-box{
  margin-top:146rpx;
}
.codeNum-box text{
  display: block;
  text-align: center;
  width: 100%;
}
.codeNum-box text:nth-child(1){
  color:#ed1414;
  font-size:72rpx;
}
.codeNum-box text:nth-child(2){
  color:#356cea;
  font-size:28rpx;
}
.writeIn{
  margin-top:50rpx;
}


.writeIn input{
  background: #fff;
  height:128rpx;
  line-height: 128rpx;
  border-radius: 20rpx;
  margin-top:10rpx;
  text-align: center;
  font-size:40rpx;
  color:green;
}
.explanation{
  width:100%;
  text-align: center;
  text-decoration: underline;
  font-size:28rpx;
  position:absolute;
  bottom:50rpx;
  left:0;


}
.integralDetail-box{
  position:absolute;
  top:380rpx;
  left:10%;
  width:80%;
  height:644rpx;
  background: #fff;
  z-index:3;
  border-radius: 20rpx;
}

.detail-centent{
  width:96%;
  margin-left:2%;
  overflow: hidden;
  border-bottom: 1rpx solid #eee;
}
.detail-left{
  height: 104rpx;
  float:left;
  padding-left:26rpx;
}
.detail-left text,.detail-right text{
  display: block;
}
.detail-left text:nth-child(1){
   margin-top:20rpx;
   font-size:30rpx;
   text-align: center;
}

.detail-left text:nth-child(2){
   
   font-size:26rpx;
   color:#b9b9b9;
   margin-top:5rpx;

}

.detail-right{
  height: 104rpx;
  line-height: 104rpx;
  float:right;
  padding-right: 26rpx;  
  font-size:34rpx;
  font-weight: 400;
  color:red;

}
.close-btn{
  top:330rpx;
  right:3%;
}
