/* pages/skillPractice/skillPractice.wxss */

.all-box {
  margin-top: 30rpx;
  width: 92%;
  height: 100%;
  position: relative;
}

.heag-bg {
  width: 100%;
  position: relative;
}

.heag-bg .image-bg {
  width: 100%;
  height: 304rpx;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 0;
}

.YY-box {
  width: 100%;
  position: absolute;
  top: 260rpx;
  z-index: 1;
}

.YY-box image {
  width: 95%;
  margin-left: 2.5%;
  height: 40rpx;
  float: left;
}

.head-content {
  width: 100%;
  height: 304rpx;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 1;
  overflow: hidden;
}

.image-star {
  width: 120rpx;
  height: 160rpx;
  margin-top: 70rpx;
  margin-left: 20rpx;
  display: block;
  float: left;
}

.skill-progress-box {
  float: left;
  margin-top: 70rpx;
  margin-left: 30rpx;
}

progress {
  display: block;
  width: 370rpx;
  border-radius: 10rpx;
  margin-bottom: 10rpx;
}

.skill-progress-box text {
  margin-bottom: 10rpx;
  color: #fff;
  display: block;
}

scroll-view {
  position: absolute;
  width: 92%;
  background: rgba(255, 255, 255, 0);
  height: 70%;
  top: 270rpx;
  left: 4%;
  z-index: 0;
}

.induction {
  background: #5a65e4;
  margin-bottom: 20rpx;
}

.skill-title {
  width: 300rpx;
  line-height: 70rpx;
  height: 70rpx;
  display: flex;
  flex-direction: row;
  border: solid #fff 2rpx;
  margin: 0 auto;
  border-radius: 5rpx;
}

.skill-title-image {
  flex: 1;
}

.skill-title image {
  width: 94rpx;
  height: 60rpx;
  display: block;
  margin-top: 5rpx;
  margin-left: 30rpx;
}

.child-image {
  position: relative;
}

.skill-lock {
  position: absolute;
  left: 0;
  top: 0;
  background: rgba(90, 101, 228, 0.7);
  border-radius: 50%;
  width: 92rpx;
  height: 92rpx;
}

.skill-lock image {
  width: 92rpx;
  height: 92rpx;
}

.skill-title text {
  flex: 1;
  display: block;
  line-height: 60rpx;
  height: 60rpx;
  margin-top: 5rpx;
  color: #fff;
  font-weight: bold;
  font-size: 34rpx;
  text-align: center;
  width: 150rpx;
  border-left: solid 1rpx #fff;
}

.skill-child-box {
  width: 90%;
  margin-left: 5%;
  margin-top: 40rpx;
  overflow: hidden;
}

.skill-child {
  width: 150rpx;
  float: left;
  margin-left: 40rpx;
  margin-bottom: 20rpx;
}

.child-image {
  width: 92rpx;
  height: 92rpx;
  border-radius: 50%;
  background: #fff;
  margin: 5rpx auto;
}

.child-image image {
  width: 80rpx;
  height: 80rpx;
  margin-top: 6rpx;
  margin-left: 6rpx;
}

.skill-child text {
  display: block;
  width: 100%;
  text-align: center;
  margin-top: 5rpx;
  color: #fff;
}

.wrapper {
  background-color: #f5f5f5;
}

.wavy-line {
  width: 100%;
  height: 5rpx;
  background-image: radial-gradient(circle, transparent, transparent 5px, #5a65e4 5px, #5a65e4);
  background-size: 10px 10px;
}

.willRank {
  display: flex;
  margin-top: 10rpx;
}

.willRank .willItem {
  margin-right: 10rpx;
}

.skillRank {
  display: flex;
  padding: 0 3px;
}

.skillRank text {
  margin-right: 10rpx;
}

.nametxt {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
