/* pages/personalCenter/personalCenter.wxss */
.container {
  width:100%;
}
.header{
  width:100%;
  position: relative;
}
.header-img-box{
  width:100%;
  position: absolute;
  left:0;
  top:0;
}
.header-img-box image{
  width:100%;
  height:308rpx;
  font-size:0rpx;
  display: block;
}



/*用户信息*/
.userinfo {
  position: absolute;
  z-index: 1;
  width:100%;
}

.userinfo-box {
  margin-top: 54rpx;
  height: 131rpx;
}
.userinfo-nickname{
  color:#fff;
  text-align: center;
  width:100%;
  display: block;
  margin-top:10rpx;

}

.userinfo-avatar-box {
  /*垂直水平居中*/
  display: flex;
  justify-content: center;
  align-items: center;
  width: 131rpx;
  height: 131rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.6);
}

.userinfo-avatar {
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
  font-size: 0;
  overflow: hidden;
}

.body{
  width:92%;
  background: #fff;
  height: 75%;
  box-shadow: 20rpx 20rpx 20rpx #e5e5e5;
  position: absolute;
  z-index:0;
  top:274rpx;


}

.body .list{
  height:106rpx;
  border-bottom:solid 1rpx #ccc;
  width:92%;
  margin-left:4%;
  line-height: 90rpx;
  overflow: hidden;
}
.list image:first-child{
  display: block;
  float:left;
  width:50rpx;
  height:50rpx;
  margin-top:28rpx;
}
.list text{
  display: block;
  float:left;
  margin-left:10rpx;
  margin-top:10rpx;
}

.list image:last-child{
  display: block;
  float:right;
  width:40rpx;
  height:40rpx;
  margin-top:33rpx;
}

.cut-off-rule{
  height:20rpx;
  width:100%;
  background: #f3f3f3;
}
.model-content{
  width:80%;
  height: 546rpx;
  margin-top:200rpx;
  
}
.yanz{
  width:90%;
  height: 120rpx;
  display: block;
  margin-left:5%;
}

.yanz input{
    border-bottom: #acacac solid 1rpx;
    display: block;
    width: 100%;
}
.yanz-title{
  display: block;
  margin-bottom: 16rpx;
}
.phone-box{
  margin-bottom: 30rpx;
}
.yzm-box{
  position: relative;
}
.yzm-btn{
  position: absolute;
  z-index: 2;
  top:36rpx;
  right: 10rpx;
  background: #f8a310;
  text-align: center;
  width: 240rpx!important;
  height:60rpx;
  line-height: 60rpx;
  display: block;
  color:#fff;
}

.save-btn button{
  display: block;
  width:90%;
  border-radius: 50rpx;
  height: 100%;
  background: #3f64ce;
  color: #fff;
  margin-top:50rpx;
}
.myphone{
  margin-left: 10rpx;
}